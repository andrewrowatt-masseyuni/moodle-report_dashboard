<tr>
<td class="tc_select"></td>
<td class="tc_name">
    <div><span class="username">{{row.username}}</span><span class="firstname">{{row.firstname}}</span><span class="lastname">{{row.lastname}}</span></div>
</td>
<td class="tc_lastaccessed">
    <span class="tag" data-filter-category="{{row.lastaccessed_filter_category}}">{{row.lastaccessed_label}}</span>
</td>
<td class="tc_groups">
<div class="tag-group">
{{#groups}}
<span class="tag {{class}}" data-filter-category="{{id}}">{{groupname}}</span>
{{/groups}}
{{#row.international}}
<span class="tag tag-priority-group" data-filter-category="priority-international">International</span>
{{/row.international}}
{{#row.maori}}
<span class="tag tag-priority-group" data-filter-category="priority-maori">MƒÅori</span>
{{/row.maori}}
{{#row.pacific}}
<span class="tag tag-priority-group" data-filter-category="priority-pacific">Pacific</span>
{{/row.pacific}}
{{#row.new}}
<span class="tag tag-priority-group" data-filter-category="priority-new">New to Massey</span>
{{/row.new}}
</div>
</td>
<td class="tc_lateassessments">
{{#lateassessments}}
<span class="tag" data-filter-category="yes">Yes</span>
{{/lateassessments}}
{{^lateassessments}}
<span class="tag" data-filter-category="no">No</span>
{{/lateassessments}}
</td>
{{#assessments}}
<td class="tc_assessment assessment{{assessmentid}}">
    <div class="tag-group">
        <span class="tag" data-filter-category="{{status}}">{{label}}</span>
        {{#extension_date}}
        <span class="tag" data-filter-category="extension" title="{{#userdate}} {{extension_date}}, {{#str}} strftimedate, core_langconfig {{/str}} {{/userdate}}">
            {{#str}} assessmentstatus_extension, report_dashboard {{/str}}
        </span>
        {{/extension_date}}
    </div>
</td>
{{/assessments}}
</tr>