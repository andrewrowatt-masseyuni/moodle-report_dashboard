<td>
    <div class="dropdown" id="group">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
            <span>All</span>
        </button>
        <div class="dropdown-menu">
            <button class="dropdown-item all" id="group_select_all" disabled="disabled">Select all</button>
            <button class="dropdown-item all" id="group_select_none">Clear all</button>

            <div class="dropdown-divider"></div>
            <h6 class="dropdown-header" title="help text here">Cohort groups <i class="fa fa-info-circle" aria-hidden="true"></i></h6>
            {{^cohort_groups}}
            <div class="dropdown-item disabled">None</div>
            {{/cohort_groups}}
            {{#cohort_groups}}
                <div class="dropdown-item form-group mb-0">
                    <div class="form-check">
                        <label class="form-check-label"><input type="checkbox" class="form-check-input" name="groups" value="{{id}}" checked="checked" data-label="{{groupname}}">{{groupname}}<span class="membercount" title="{{membercount}} student/s are in this group">{{membercount}}</span>
                        <span class="tag tag-cohort-group"></span>
                        </label>
                    </div>
                </div>
            {{/cohort_groups}}
            <div class="dropdown-divider"></div>
            <h6 class="dropdown-header">Course groups</h6>
            {{^groups}}
            <div class="dropdown-item disabled">None</div>
            {{/groups}}
            {{#groups}}
                <div class="dropdown-item form-group mb-0">
                    <div class="form-check">
                        <label class="form-check-label"><input type="checkbox" class="form-check-input" name="groups" value="{{id}}" checked="checked" data-label="{{groupname}}">{{groupname}}<span class="membercount" title="{{membercount}} student/s are in this group">{{membercount}}</span></label>
                    </div>
                </div>
            {{/groups}}

            <div class="dropdown-divider"></div>
            <h6 class="dropdown-header" title="Priority groups help text here">Priority groups <i class="fa fa-info-circle" aria-hidden="true"></i></h6>
            <!-- <div class="dropdown-item disabled">None</div> -->

<div class="dropdown-item form-group mb-0"><div class="form-check"><label class="form-check-label"><input type="checkbox" class="form-check-input" name="groups" value="priority-international" checked="checked" data-label="International">International<span class="tag tag-priority-group"></span></label></div></div>
<div class="dropdown-item form-group mb-0"><div class="form-check"><label class="form-check-label"><input type="checkbox" class="form-check-input" name="groups" value="priority-new" checked="checked" data-label="New">New<span class="tag tag-priority-group"></span></label></div></div>
<div class="dropdown-item form-group mb-0"><div class="form-check"><label class="form-check-label"><input type="checkbox" class="form-check-input" name="groups" value="priority-maori" checked="checked" data-label="Māori">Māori<span class="tag tag-priority-group"></span></label></div></div>
<div class="dropdown-item form-group mb-0"><div class="form-check"><label class="form-check-label"><input type="checkbox" class="form-check-input" name="groups" value="priority-pacific" checked="checked" data-label="Pacific">Pacific<span class="tag tag-priority-group"></span></label></div></div>

            <div class="dropdown-divider"></div>

            <div class="dropdown-item form-group mb-0">
                <div class="form-check">
                    <label class="form-check-label">
                        <input type="checkbox" class="form-check-input" name="groups" value="nogroups" checked="checked">
                        No groups
                    </label>
                </div>
            </div>

        </div>
    </div>
</td>